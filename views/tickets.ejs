<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/assets/icon.jpg">
  <title>Tickets | Railr</title>
</head>

<body>

  <%- include('partials/header.ejs') %>

  <h1 class="page-head">Your Tickets</h1>

  <div class="grid">

    <% if (tickets.length > 1) { %>
    <% tickets.forEach(ticket => { %>
    <div id="metro">
      <img src="<%= ticket.schedule.metro.image %>" alt="<%= ticket.schedule.metro.name %>">
      <div class="metro-info">
        <h1><%= ticket.schedule.metro.name %></h1>
        <div>From: <span class="value"><%= ticket.schedule.from %> </span></div>
        <div>To: <span class="value"><%= ticket.schedule.to %> </span></div>
        <div>Bookings: <span class="value"><%= ticket.bookings %> </span></div>
        <div>Price: <span class="value">₹ <%= ticket.schedule.price * ticket.bookings %> </span>(₹
          <%= ticket.schedule.price %>
          each)</div>
        <div>Schedule: <span class="value"><%= ticket.schedule.time %> </span></div>
      </div>
    </div>
    <% }) %>
    <% } else { %>
    <p style="font-size: 1.3rem; font-weight: 300; color: #565656">You haven't booked any trains yet</p>
    <% } %>

  </div>

  <script src="/js/navbar.js"></script>
  <script>
    const metros = document.querySelectorAll('#metro');

    metros.forEach(metro => {
      metro.querySelector('img').style.height = `${
        metro.querySelector('.metro-info').clientHeight
        }px`;
    })
  </script>

</body>

</html>