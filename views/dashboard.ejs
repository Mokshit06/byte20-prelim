<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/assets/icon.jpg">
  <title>Dashboard | Railr</title>
</head>

<style>

</style>

<body class="dashboard">
  <%- include('partials/header.ejs') %>

  <div id='map'></div>
  <div class="metro-form">
    <div class="form">
      <div class="form-header">Where do you want to go?</div>
      <div class="padding">
        <form id="search-form">
          <input class="input" type="text" id="from" placeholder="Enter your location" required>
          <input class="input" type="text" id="to" placeholder="Enter your destination" required>
          <input class="input" type="number" id="bookings" placeholder="Number of bookings" required>
          <button class="search-btn" type="submit">Search</button>
        </form>
        <div id="metro"></div>
      </div>
    </div>
  </div>

  <script src="/js/navbar.js"></script>
  <script src="https://js.stripe.com/v3/"></script>
  <script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>
  <script src="/js/app.js"></script>
</body>

</html>